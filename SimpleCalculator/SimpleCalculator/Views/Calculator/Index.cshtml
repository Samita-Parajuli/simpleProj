@using SimpleCalculator.Models;
@model Calculator
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .calculator-form {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 300px;
        }

            .calculator-form input,
            .calculator-form select,
            .calculator-form button {
                margin: 5px 0;
                padding: 8px;
                width: calc(100% - 16px);
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
            }

            .calculator-form button {
                background-color: #4CAF50;
                color: white;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .calculator-form button:hover {
                    background-color: #45a049;
                }

                .calculator-form button.operator {
                    background-color: #ff6f00; /* Orange color */
                }

                    .calculator-form button.operator:hover {
                        background-color: #e65100; /* Darker orange color */
                    }

        .result {
            font-size: 18px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="calculator-form">
        <form asp-action="Calculate">
            <input asp-for="Operand1" placeholder="Enter first number" />
            <select asp-for="Operator">
                <option value="+">+</option>
                <option value="-">-</option>
                <option value="*">*</option>
                <option value="/">/</option>
            </select>
            <input asp-for="Operand2" placeholder="Enter second number" />
            <button type="submit">Calculate</button>
        </form>
        <p class="result">Result: @Model.Result</p>
    </div>
</body>
</html>